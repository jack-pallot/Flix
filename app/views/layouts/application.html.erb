<!DOCTYPE html>
<html>
  <head>
    <title>Flix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "includes/header" %>

    <div class="content">
      <%= render "shared/flash" %>
      <%= yield %>
    </div>

    <%= render "includes/footer" %>
  </body>
</html>
